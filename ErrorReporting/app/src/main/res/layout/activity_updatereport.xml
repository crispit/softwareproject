<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fredrikhansson.komigennuraa.UpdateReport"
    android:background="@color/colorBackground">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint= "@string/AddComment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/UppdateraFelkategori"
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/editText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symptom"
        android:id="@+id/symptombutton"
        android:width="260dp"
        android:height="80dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:onClick="symptomList"
        android:layout_below="@id/textView3"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Grade"
        android:id="@+id/textView2"
        android:layout_below="@+id/symptombutton"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/gradebutton"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/custom_button4"
        android:onClick="setGrade"
        android:textSize="50dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/updatebutton"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="@drawable/buttonn_grey"
        android:text="@string/Update"
        android:width="260dp"
        android:height="80dp"
        android:textSize="30sp"
        android:onClick="updateReport"
        android:layout_below="@id/gradebutton"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
